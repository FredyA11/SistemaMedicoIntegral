        <div class="row mt-4 justify-content-center">
          <form method="POST" action="/guardarMedico">
            <div class="form-group">
              <label for="medicoName">Nombre Completo:</label>
              <input type="text" class="form-control" name="medicoName" aria-describedby="emailHelp" placeholder="Ingresar nombre" required>
            </div>
            <div class="form-group">
              <label for="especialidad">Especialidad:</label>
              <input type="text" class="form-control" name="especialidad" aria-describedby="emailHelp" placeholder="Ingresar especialidad" required>
            </div>
            <div class="form-group">
              <label for="cedPro">Cédula Profesional:</label>
              <input type="text" class="form-control" name="cedPro" aria-describedby="emailHelp" placeholder="Ingresar Cedula Profesional" required>
            </div>
            <div class="form-group">
              <label for="passwordM">Contraseña:</label>
              <input type="password" class="form-control" name="passwordM" placeholder="Password" required>
            </div>
            <div class="form-group">
              <label for="eqTrabajo">Equipo de Trabajo:</label>
              <input type="text" class="form-control" name="eqTrabajo" aria-describedby="emailHelp" placeholder="Ingresar nombre de equipo" required>
            </div>
            <div class="form-group">
              <label for="uni">Universidad:</label>
              <input type="text" class="form-control" name="uni" aria-describedby="emailHelp" placeholder="Ingresar universidad" required>
            </div>
            <div class="form-group">
              <label for="afiliacion">Afiliacion:</label>
              <input type="text" class="form-control" name="afiliacion" aria-describedby="emailHelp" placeholder="Ingresar Afiliacion" required>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
          </form>
