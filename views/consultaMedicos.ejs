        <% if (registro) { %>
          <script>
            var registroS = <%= registro %>;
            var regFallido=<%= fallido %>;
            console.log(registroS);
            $( document ).ready(function() {
                if(registroS==true){
                    if(regFallido){
                      $('#myModal2').modal('show');
                    }
                    else{
                      $('#myModal').modal('show');
                    }
                    
                }
                else{
                    $('#myModal').modal('hide');
                }
              });
          </script>
        <% } %>
