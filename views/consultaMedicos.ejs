        <div class="row mt-5 justify-content-center">
            <div class="col-xl-12 mt-5 text-center">
                <h2 class="mt-5">Buscar Médico</h2>
            </div>
            
        </div>

        <div class="row mt-4 justify-content-center">
          <form method="POST" action="/buscarMedicoN">
            <div class="form-group">
              <label for="exampleInputEmail1">Nombre Completo:</label>
              <input type="text" required name="nombre" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Ingresar nombre">
            </div>
            
            <button type="submit" class="btn btn-primary">Buscar por nombre</button>
          </form>
        </div>
        <div class="row mt-4 justify-content-center">
          <form method="POST" action="/buscarMedicoC">
            <div class="form-group">
              <label for="cedPro">Cédula Profesional:</label>
              <input type="text" class="form-control" name="cedPro" aria-describedby="emailHelp" placeholder="Ingresar Cedula Profesional" required>
            </div>
            
            <button type="submit" class="btn btn-primary">Buscar por Cédula</button>
          </form>
        </div>
        <div class="row  justify-content-center">
          <% for( let i = 0; i < pacientes.length; i++ ) { %>
              <div class="row mt-5 w-75 justify-content-center">
                  <div class="card bg-info text-white  w-100">
                      <div class="card-header">
                        <h4><%= pacientes[i].nombre  %> </h4> 

                      </div>
                      <div class="card-body text-dark bg-light  ">
                        <h5 class="card-title">Especialidad</h5>
                        <p><%= pacientes[i].especialidad %> </p>
                        <h5 class="card-title">Cedula Profesional</h5>
                        <p><%= pacientes[i].cedPro %> </p>
                        <h5 class="card-title">Equipo de Trabajo</h5>
                        <p><%= pacientes[i].equipoTrabajo %> </p>
                        <h5 class="card-title">Universidad</h5>
                        <p><%= pacientes[i].universidad %> </p>
                        <h5 class="card-title">Afiliacion</h5>
                        <p><%= pacientes[i].afilicacion %> </p>
                      </div>
                  </div>
              </div>
          <% } %> 
      </div>

      <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle"><img src="images/logo2.png" width="200" height="90">Aviso</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                No ha encontrado ningún médico
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
        </div>
